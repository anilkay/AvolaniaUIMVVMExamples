<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Aval1.MainWindow"
        Title="Aval1">
  <Grid  ColumnDefinitions="100,1.5*,4*" RowDefinitions="Auto,Auto,Auto">
  <Button Name="button" Grid.Row="0" Grid.Column="1" Command="{Binding ButtonClicked}">Click Me!</Button>
  <TextBox Grid.Row="0" Grid.Column="2" Text="{Binding MainText}"></TextBox>
    </Grid>
</Window>
